  <view class="wrong_ra2" bindtap="ra2">
    <icon type="{{ra2}}" size="10"/>
    <view class="wrong_10">空闲</view>
  </view>

  <view class="wrong_ra3" bindtap="ra3">
    <icon type="{{ra3}}" size="10"/>
    <view class="wrong_10">单周</view>
  </view>

  <view class="wrong_line a"></view>
  <view class="wrong_line b"></view>
  <view class="wrong_line e"></view>
  <view class="wrong_line f"></view>


  <view class="wrong_9" bindtap="sendinfo" >提交</view>
</view>