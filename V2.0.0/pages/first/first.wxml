    <view class="wrong_line d"></view>
  </view>
  <view wx:else>
    <text class="wrong_5">修改周：</text>
    <input type="number" placeholder="填写数字如1" placeholder-class="holder" maxlength="2" bindblur="singleweek" class="wrong_i5" value="{{singleweek}}"/>
    <view class="wrong_line c"></view>
  </view>

  <text class="wrong_7">星期：</text>
  <input type="number" placeholder="填写数字如1" placeholder-class="holder" maxlength="1" bindblur="weeknum" class="wrong_i7" value="{{weeknum}}"/>
  <text class="wrong_8">时间段</text>
  <input type="number" placeholder="填写数字如1" placeholder-class="holder" maxlength="1" bindblur="time" class="wrong_i8" value="{{time}}"/>



  

