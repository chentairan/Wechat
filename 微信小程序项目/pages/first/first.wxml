<!--first.wxml-->
<!--菜单栏-->
<view class="contain">
  <block wx:for="{{list}}" wx:for-item="item" wx:for-index="item_x">

  <block wx:if="{{item_x < 3}}">

    <view  class="tab">
      <view id="{{item.id}}" class="text" bindtap="tap">
        {{item.name}}
        <view class="{{item.name.length==3?'triangle-bug':'triangle'}}"></view>
      </view>
    </view>
        <view class="widgets__list {{item.open ? 'widgets__list_show' : ''}}">
        <block wx:for-items="{{item.list_2}}" wx:for-item="page" wx:for-index="page_x">
            <view  class="widget {{page_x==item.list_2.length-1?'widget_2':''}}"  id="{{page_x}}" bindtap="choose">
              <view class="widget__name" >{{page}}</view>
              <view class="widget__line {{page_x == 0 ? 'widget__line_first' : ''}}"></view>
            </view>
        </block>
        </view>
  </block>

  <view wx:else>
      
      <view  class="tab">
        <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{list[3].multiIndex}}" range="{{list[3].multiArray}}">
          <view class="text">
            时间
          </view>
          <view class="triangleForTime"></view>
        </picker>  
      </view>


      <view class="widgets__list"></view>

      
  </view>
    
      

  </block>
</view>


<!--搜索按钮-->
  <view class="button" hover="true" hover-stay-time="0" catchtap="Search" >
    <image  class="Search-pic" src="/image/Search.png" mode="aspectFill"></image>
  </view>

  <!--信息样式转换按钮-->
  <view class='{{openinfor1?"infor-button1":"infor-button-1"}}' hover="true" bindtap="Switch">
    <image  class="inforSearch1-pic" src= "/image/inforSearch1.png"></image>
  </view>
  <view class='{{openinfor1?"infor-button-2":"infor-button2"}}' hover="true" bindtap="Switch">
    <image  class="inforSearch1-pic" src= "/image/inforSearch2.png"></image>
  </view>

  <!--数据显示-->
  <view wx:if="{{openinfor1==false}}">
    <block wx:for="{{A}}" wx:key="id" wx:for-item="inforlist">
      <view  class="inforbar">
        <test space="true" class="basicinfor">
        {{inforlist.classroom.building}}-{{inforlist.classroom.roomnumber}}/{{inforlist.weekday}}
        </test>
        <text class="holdandtype">
            规模：{{inforlist.basicinfor.hold}}
            
            类型：{{inforlist.basicinfor.feature}}
        </text>
        <view class="line"></view>
        <view class="flex_column">
          <block wx:for-items="{{inforlist.timearray}}" wx:for-item="itemName" wx:key="id">
            <block wx:if="{{ itemName.item==1}}"> 
              <image class="iconclass" src="/image/yes.png"></image>
            </block>
            <block wx:else> 
              <image class="iconclass" src="/image/no.png"></image>
            </block>
          </block>      
        </view>
      </view>
    </block>
  </view>