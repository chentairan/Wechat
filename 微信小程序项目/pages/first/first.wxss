/* first.wxss */
.contain
{
  display:flex;
  flex-direction: row;
  background:-webkit-linear-gradient(top, #53bbbb, rgba(83,187,187,0.9));
  box-shadow: 0 6rpx 8rpx rgba(83,187,187,0.5);
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.tab
{
  flex-direction: row;
  height: 80rpx;
  width: 187.5rpx;
}
.text
{
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  color: white;
  position: relative;
  top:20rpx;
  left:40rpx;
  font-size: 30rpx;
}

.triangle
{
    width: 0;
    height: 0;
    align-items: center;
    position: relative;
    top:-22rpx;
    left:80rpx;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-top: 14rpx solid rgba(238, 238, 238,0.6);
}
.triangle-bug
{
    width: 0;
    height: 0;
    align-items: center;
    position: relative;
    top:-22rpx;
    left:110rpx;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-top: 14rpx solid rgba(238, 238, 238,0.6);
}
