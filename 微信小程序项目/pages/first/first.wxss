/*按钮样式*/
.button
{
  width: 150rpx;
  height: 75rpx;
  border-radius: 37.5rpx;
  box-shadow: 6rpx 6rpx 5rpx #C9C9C9;
}

/*滚动区域样式*/
.scroll
{
  margin-top:60rpx;
  width:750rpx;
  height:80rpx;
}

/*理教样式*/
.button.li
{
  background: -webkit-radial-gradient(rgba(129,167,193,1),rgba(129,167,193,0.7));
  position: absolute;
  left: 68rpx;
}

/*综教A样式*/
.button.za
{
  background: -webkit-radial-gradient(rgba(339,69,86,1),rgba(339,69,86,0.7));
  position: absolute;
  left:300rpx;
}

/*综教B样式*/
.button.zb
{
  background: -webkit-radial-gradient(rgba(175,95,45,1),rgba(175,95,45,0.7));
  position: absolute;
  left:532rpx;
}

/*按住样式*/

.button.li:hover
{
 background: -webkit-radial-gradient(rgba(129,167,193,0.8),rgba(129,167,193,0.7));
}

.button.za:hover
{
  background: -webkit-radial-gradient(rgba(339,69,86,0.8),rgba(339,69,86,0.7));
}

.button.zb:hover
{
  background: -webkit-radial-gradient(rgba(175,95,45,0.8),rgba(175,95,45,0.7));
}

/*测试按钮*/
.button.test
{
  background: -webkit-radial-gradient(rgba(255,167,0,1),rgba(255,167,0,0.7));
  position: absolute;
  left:764rpx;
}

.button.test:hover
{
  background: -webkit-radial-gradient(rgba(255,167,0,0.8),rgba(255,167,0,0.7));
}

.image
{
  position: relative;
  left:175rpx;
  height:400rpx;
  width:400rpx; 
}